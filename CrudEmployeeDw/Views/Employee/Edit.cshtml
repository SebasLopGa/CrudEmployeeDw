@model Employee

@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Editar Empleado</h1>

<div class="row">
    <div class="col-md-6">
        <form id="employeeForm" asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">Nombre</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="BirthDate">Fecha de Nacimiento</label>
                <input asp-for="BirthDate" type="date" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Salary">Salario</label>
                <input asp-for="Salary" type="number" step="0.01" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
            </div>

            <div id="validationSummary" class="text-danger"></div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/employeeValidation.js"></script>
}
