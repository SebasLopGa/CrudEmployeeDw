@model Employee

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h1>Eliminar Empleado</h1>

<div class="alert alert-danger">
    <h3>¿Estás seguro de que deseas eliminar este empleado?</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Fecha de Nacimiento</dt>
            <dd class="col-sm-8">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Salario</dt>
            <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>
